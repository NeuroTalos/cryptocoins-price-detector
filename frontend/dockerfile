# Используем официальный образ Node.js
FROM node:20

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем файлы проекта
COPY . /app

# Устанавливаем зависимости
RUN npm install

# Собираем приложение
RUN npm run build

# Открываем порт
EXPOSE 4173

# Запускаем сервер для фронтенда
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0"]